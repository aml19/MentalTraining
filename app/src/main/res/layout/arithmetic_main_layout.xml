<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/firstNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="125dp"
        android:layout_weight="0"
        android:gravity="end"
        android:hint="Number 1"
        android:textSize="36sp"
        android:layout_marginEnd="125dp" />

    <TextView
        android:id="@+id/secondNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="125dp"
        android:layout_weight="0"
        android:gravity="end"
        android:hint="Number 2"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Answer"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:layout_marginTop="64dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/calculator_seven"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                android:singleLine="false"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/calculator_eight"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/calculator_nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                android:text="9"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/calculator_clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                style="?android:attr/buttonBarButtonStyle"
                android:text="CLR"
                android:textColor="@android:color/white"
                android:textSize="36sp" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/calculator_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                style="?android:attr/buttonBarButtonStyle"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/calculator_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                style="?android:attr/buttonBarButtonStyle"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/calculator_six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                style="?android:attr/buttonBarButtonStyle"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/calculator_sign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                style="?android:attr/buttonBarButtonStyle"
                android:text="+/-"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/calculator_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                style="?android:attr/buttonBarButtonStyle"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/calculator_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                style="?android:attr/buttonBarButtonStyle"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/calculator_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                style="?android:attr/buttonBarButtonStyle"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/calculator_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="@android:color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/calculator_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                android:text="."
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/calculator_zero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                style="?android:attr/buttonBarButtonStyle"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/calculator_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                style="?android:attr/buttonBarButtonStyle"
                android:text="Del"
                android:textColor="@android:color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/calculator_enter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/screen_background_dark"
                style="?android:attr/buttonBarButtonStyle"
                android:text="Ent"
                android:textColor="@android:color/white"
                android:textSize="36sp" />
        </TableRow>
    </TableLayout>


</LinearLayout>
